<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp">
    <ImageView
        android:id="@+id/ivhuabangbg"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_empty_320_180"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/ivhuabangbg"
        android:layout_alignParentStart="true">
     <TextView
         android:id="@+id/tvhuabangtitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:paddingBottom="4dp"
         android:textColor="#fff"
         />
        <TextView
            android:id="@+id/tvhuabangauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#159470"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tvhuabangbofangcishu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingBottom="4dp"
            android:textColor="#fff"
            />

    </LinearLayout>

</RelativeLayout>