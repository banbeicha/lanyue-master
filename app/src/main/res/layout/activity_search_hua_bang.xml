<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wz.lanyue.banke.SearchHuaBangActivity">
<LinearLayout
    android:id="@+id/llSearchHuaBang"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/hongse"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/ivSearcHuaBangBack"
        android:layout_marginTop="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/title_back"
        />
    <EditText
        android:id="@+id/etHuaBangSearchKeyord"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:paddingLeft="4dp"
        android:background="@drawable/editstyle"
        android:textCursorDrawable="@drawable/editcursor"
       android:hint="输入艺人或mv名称"
        android:textColorHint="#F39497"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/tvHuaBangSearch"
        android:layout_marginTop="12dp"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:text="搜索"
        android:textColor="#F39497"
        android:gravity="center"
          android:textSize="16sp"
        android:enabled="false"

        />
</LinearLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/XRlvSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>
